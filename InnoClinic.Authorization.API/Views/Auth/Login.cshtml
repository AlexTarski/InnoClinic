@model InnoClinic.Authorization.Business.Models.LoginViewModel
<head>
    <title>Login</title>
    <style>
        .logo {
            justify-content: center;
            display: flex;
            align-content: center;
            margin-bottom: 10px;
        }

        .input {
            font-size: 16px;
            font-family: Arial;
            background-color: #fff;
            width: 100%;
        }

        .header {
            font-family: Arial;
            color: #332600;
            font-size: 30px;
            text-align: center;
        }

        .button {
            font-size: 16px;
            background-color: #a191bd;
            border-radius: 4px;
            color: #332600;
            font-family: Arial;
            width: 100%;
        }

        .block {
            margin-top: 10px;
        }

        .switch-button {
            margin-top: 8px;
            font-size: 16px;
            border-radius: 4px;
            color: #332600;
            font-family: Arial;
            display: inline-block;
            text-align: center;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="logo">
        <img src='https://localhost:10036/assets/innoclinic-logo.png' alt='InnoClinic Logo' style='height:100px;' />
    </div>
    <form asp-controller="Auth" asp-action="Login" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="header">Login</div>
        <div class="block">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="input" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="block">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="input" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="block">
            <button type="submit" class="button">Sign In</button>
        </div>
        <a asp-controller="Auth" asp-action="Register"
           asp-route-returnUrl="@Model.ReturnUrl" class="switch-button">Sign-Up</a>
    </form>
</body>